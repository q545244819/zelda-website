<div class="am-u-sm-4 categories-item-wrap">
  <p class="info am-cf"><%= item.created_at.to_formatted_s(:db) %><span class="am-badge am-badge-primary am-radius am-fr"><%= item.category.name %></span></p>
  <div class="image" <% if item.image %>style="background-image: url(<%= item.image %>)"<% end %>></div>
  <a href="/articles/<%= item.id %>" class="title"><%= item.title %></a>
</div>