<div class="am-container">
  <%= form_for 'categories', method: 'post', html: { class: 'am-form' }, data: {'am-validator': true} do |f| %>
    <div class="am-form-group">
      <%= label_tag :name, '名称' %>
      <%= text_field_tag :name, @category.name, required: true %>
    </div>
    <div class="am-form-group">
      <%= label_tag :description, '描述' %>
      <%= text_field_tag :description, @category.description, required: true %>
    </div>
    <div class="am-form-group">
      <%= label_tag :image, '图片链接' %>
      <%= url_field_tag :image, @category.image, required: true %>
    </div>
    <% if @category.image %>
      <div class="am-form-group">
        <label>已上传图片预览</label>
        <%= image_tag @category.image, class: 'am-img-thumbnail am-radius admin-article-image' %>
      </div>
    <% end %>
    <%= f.submit "保存", class: 'am-btn am-btn-primary' %>
  <% end %>
</div>